<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageButton
        android:id="@+id/btnlogin"
        android:layout_width="228dp"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:adjustViewBounds="true"
        android:background="@null"

        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrasenialogin"
        app:srcCompat="@drawable/btnlogin" />

    <ImageButton
        android:id="@+id/btnloginresgistro"
        android:layout_width="226dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnlogin"
        app:layout_constraintVertical_bias="0.082"
        app:srcCompat="@drawable/btnregistrarseaamarillo" />

    <EditText
        android:id="@+id/maillogin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/hintresgistro"
        android:ems="10"
        android:hint="@string/mailregistro"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/texthint"
        android:textColorHint="@color/texthint"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resgistrobajada2" />

    <EditText
        android:id="@+id/contrasenialogin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/hintresgistro"
        android:ems="10"
        android:hint="@string/contraseniaregistro"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/texthint"
        android:textColorHint="@color/texthint"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maillogin"
        app:layout_constraintVertical_bias="0.033" />

    <ImageView
        android:id="@+id/logoDavicio2"
        android:layout_width="201dp"
        android:layout_height="136dp"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.154"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/resgistrobajada2"
        android:layout_width="270dp"
        android:layout_height="28dp"
        android:fontFamily="@font/cascadiafont"
        android:text="@string/logintitulo"
        android:textAlignment="center"
        android:textColor="@color/rosa"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoDavicio2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/camposincompletoslogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/cascadiafont"
        android:textColor="@color/rosa"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrasenialogin" />
</androidx.constraintlayout.widget.ConstraintLayout>